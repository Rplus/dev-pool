$color--darker = #202020;
$color--lighter = #fafafa;

$circle-size = 400px;
$ani-duration = 2.8s;

///
/// major style
///

$circle {
  position: absolute;
  top: $circle-size * .5;
  width: 50%;
  border-radius: 50%;
  animation: yin-yang $ani-duration ease-in-out infinite alternate;

  &::before {
    content: "";
    display: block;
    padding-bottom: 100%;
  }

  &::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 20%;
    height: 20%;
    background-color: currentColor;
    border-radius: 50%;
  }
}

.yin-yang {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  animation: rotate ($ani-duration * 2) linear infinite;

  // linear-gradient is better for control,
  // but bad phantomjs(for screenshot) don't support !

  // background-image: linear-gradient(0deg, $color--lighter 50%, $color--darker 50%);
  // background-size: 100%;
  // background-repeat: no-repeat;

  // this one emulates background-image
  &::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    border: ($circle-size * .5) solid;
    border-color: $color--lighter $color--lighter $color--darker $color--darker;
    border-radius: 50%;
    transform: rotate(-45deg);
  }
}

.yin {
  @extend $circle;
  left: 0;
  background-color: $color--darker;
  color: $color--lighter;
  transform: translateY(-50%) scale(1.5);
  transform-origin: 0% 50%;
}

.yang {
  @extend $circle;
  right: 0;
  background-color: $color--lighter;
  color: $color--darker;
  animation-direction: alternate-reverse;
  transform: translateY(-50%) scale(.5);
  transform-origin: 100% 50%;
}

@keyframes yin-yang {
  0%   { transform: translateY(-50%) scale(0); }
  100% { transform: translateY(-50%) scale(2); }
}

@keyframes rotate {
  0%   { transform: rotate( 30deg); }
  100% { transform: rotate(390deg); }
}



.box {
  position: relative;
  width: $circle-size;
  height: $circle-size;
  margin: 0 auto;
  overflow: hidden;

  &:hover  * {animation-play-state: paused; }
  &:active * {animation-play-state: running; }
}



///
/// reset style
///

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  position: relative;
  margin: 0;
  min-height: 100vh;
  padding-top: 1px;
  text-align: center;
  background-color: #2b2e2d;
  color: #e4e3c8;
}

.intro {
  width: 80%;
  max-width: 30rem;
  padding-bottom: 1rem;
  margin: .5em auto 1em;
  text-transform: capitalize;
  border-bottom: 1px dashed #999;

  small {
    display: block;
    opacity: .5;
    font-style: italic;
    text-transform: capitalize;
  }
}

.info {
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 1em;
  font-size: .9em;
  font-style: italic;
  font-family: serif;
  text-align: right;
  color: #999;

  a {
    color: inherit;
  }
}
