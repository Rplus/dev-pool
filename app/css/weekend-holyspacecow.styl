$color--darker = #202020;
$color--lighter = #e4e3c8;

$box-size = 400px;
$box-ratio = .75;
$dot-count = 80;
$cover-ratio = .5;

///
/// major style
///

.box--inner {
  height: 100%;
  background-image: conic-gradient($color--darker 75%, transparent 0);
  background-size: floor($box-size / $dot-count) floor($box-size / $dot-count);

  border-top: floor($box-size * .5 / $dot-count) solid;
  border-left: floor($box-size * .5 / $dot-count) solid;

  opacity: 1;
  transition: opacity 3s;
  will-change: opacity;

  .box:hover & {
    opacity: 0;
  }
}

.box {
  position: relative;
  width: $box-size;
  height: $box-size * $box-ratio;
  margin: 0 auto;
  overflow: hidden;
  background: url("http://i.imgur.com/PlPY7b8.jpg") no-repeat 50%;
  background-size: cover;
  color: $color--darker;
}


///
/// reset style
///

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  position: relative;
  margin: 0;
  min-height: 95vh;
  padding-top: 1px;
  text-align: center;
  background-color: $color--darker;
  color: $color--lighter;
}

.intro {
  width: 80%;
  max-width: 40rem;
  padding-bottom: 1rem;
  margin: .5em auto 1em;
  border-bottom: 1px dashed #999;

  small {
    display: block;
    opacity: .5;
    font-style: italic;
  }
}

.info {
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 1em;
  font-size: .9em;
  font-style: italic;
  font-family: serif;
  text-align: right;
  color: #ccc;

  a {
    color: inherit;
  }
}
